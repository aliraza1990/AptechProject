@model IEnumerable<WebApplication4.role>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:10px;">Role Management</h2>

<p>
    @Html.ActionLink("Add New Role", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.r_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.r_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.r_id }) |
        
            @Html.ActionLink("Delete", "Delete", new { id=item.r_id })
        </td>
    </tr>
}

</table>

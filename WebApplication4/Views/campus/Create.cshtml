        <h4 style="margin-top:10px">Add new campus</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.c_name, htmlAttributes: new { @class = "control-label col-md-2" })
